@model MedicineDonation.Models.User

@{
    ViewBag.Title = "User Dashboard";
}
<h2 class="mb-4">User Dashboard</h2>
<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg p-4 text-center" style="width: 50%;">
        <h4 class="mb-3">Welcome, @Model.Name</h4>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>State:</strong> @Model.State</p>
                <p><strong>City:</strong> @Model.City</p>
                <p><strong>Pincode:</strong> @Model.Pincode</p>
            </div>
        </div>

        <div class="mt-4">
            <a class="btn btn-primary mb-2" asp-controller="Donation" asp-action="Create">Donate Medicine</a>
            <a href="@Url.Action("PastDonations", "Donation")" class="btn btn-success mb-2">View Past Donations</a>
            <a href="@Url.Action("ChangePassword", "Account")" class="btn btn-warning mb-2">Change Password</a>
        </div>
    </div>
</div>
